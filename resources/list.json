{
  "rjs": {
    "type": "doc",
    "folder": "rjs",
    "postinstalls": ["quarto add quarto-ext/attribution --quiet --no-prompt"]
  },
  "main": {
    "type": "doc",
    "folder": "main"
  },
  "springernature": {
    "type": "doc",
    "folder": "journals/springernature"
  },
  "elsevier": {
    "type": "doc",
    "folder": "journals/elsevier"
  },
  "3dpam": {
    "type": "doc",
    "folder": "journals/3dpam"
  },
  "jmd": {
    "type": "doc",
    "folder": "journals/jmd"
  },
  "idetc": {
    "type": "doc",
    "folder": "journals/idetc"
  },
  "psu": {
    "type": "doc",
    "folder": "journals/psu"
  },
  "resume": {
    "type": "doc",
    "folder": "portfolio/resume"
  },
  "vitae": {
    "type": "doc",
    "folder": "portfolio/vitae"
  },
  "letter": {
    "type": "doc",
    "folder": "portfolio/letter"
  },
  "pyr": {
    "type": "doc",
    "folder": "pyr",
    "destination": "./"
  },
  "cloudinary": {
    "type": "app",
    "folder": "cloudinary",
    "dependencies": ["next-cloudinary", "cloudinary"]
  },
  "tauri": {
    "type": "app",
    "devDependencies": ["@tauri-apps/cli"],
    "postinstalls": [
      "bunx --bun tauri init && bunx --bun tauri icon .\\public\\icons\\icon.ico"
    ],
    "scripts": {
      "taurize": "bun exec tauri build"
    }
  },
  "r3f": {
    "type": "app",
    "folder": "r3f",
    "dependencies": [
      "@react-three/xr@latest",
      "@react-three/drei",
      "@react-three/fiber",
      "@react-three/uikit",
      "r3f-perf",
      "@types/three",
      "three",
      "three-stdlib"
    ],
    "scripts": {
      "r3add": "bunx --bun uikit component add --overwrite --path components/r3f default"
    },
    "extras": {
      "dependencies": [
        "@react-three/flex",
        "@react-three/rapier",
        "@react-three/offscreen",
        "@react-three/csg",
        "@react-three/postprocessing",
        "three-bvh-csg"
      ]
    }
  }
}

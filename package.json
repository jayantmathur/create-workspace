{
  "name": "create-workspace",
  "description": "A CLI tool to create a new workspace or update an existing one. Allows creating new web applications and documentation or manuscripts",
  "module": "index.ts",
  "type": "module",
  "version": "2.1.1",
  "bin": {
    "create-workspace": "index.ts",
    "cnw": "index.ts",
    "cnwx": "argvs.ts"
  },
  "scripts": {
    "check": "biome check --write --error-on-warnings --diagnostic-level=warn",
    "dev": "bun run --watch index.ts",
    "pull": "cnwx sync --restore",
    "prepush": "bun check && cnwx sync",
    "create-link": "npm link;bun link;bun link create-workspace",
    "push": "cnwx git"
  },
  "devDependencies": {
    "@biomejs/biome": "latest",
    "@types/bun": "latest"
  },
  "peerDependencies": {
    "typescript": "^5"
  },
  "dependencies": {
    "@clack/prompts": "^0.11.0",
    "yaml": "^2.8.2"
  }
}
